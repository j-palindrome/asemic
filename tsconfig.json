{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2019",
    "jsx": "react-jsx",
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": ["DOM", "ES5", "ES6", "ES7", "ESNext"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["@webgpu/types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "legacy/parser", "legacy/blocks"],
  "exclude": ["_archive", "node_modules", "dist"]
}
